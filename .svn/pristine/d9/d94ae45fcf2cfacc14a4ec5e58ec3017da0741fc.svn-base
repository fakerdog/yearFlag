}
.drawer_box{
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content:center;
  /* overflow: hidden; */
  position: fixed; 
  bottom: 0px; 
  z-index: 1001;
  text-align: center;
  background-color: white;
} 
.drawer_content_box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(147, 204, 201,0.5);
}
.drawer_content{
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%,-50%);
  width:640rpx; 
  height:1080rpx;
  flex-wrap: wrap;
  /* margin-top: -50rpx; */
}


.drawer_btn_block{
  width: 100%;
  position: absolute;
  align-items: center;
  justify-content:space-between;
  display:flex;
	flex-direction:row;
}

.drawer_btn_block button{
  height: 40px;
  line-height: 40px;
  font-size: 30rpx;
  padding: 0 30rpx;
  margin: 0 auto;
}
.drawer_btn_block button:nth-child(1){
  background-color: #ccc;
  padding: 0 40rpx;
}
.drawer_btn_close{
  width: 100%;
  position: absolute;
  align-items: center;
  justify-content:space-between;
  display:flex;
	flex-direction:row;
  margin-top: 100rpx;
}

.drawer_btn_close button{
  height: 30px;
  width: 200rpx;
  line-height: 30px;
  font-size: 30rpx;
  padding: 0 30rpx;
  margin: 0 auto;
}
.drawer_btn_close button:nth-child(3){
  background-color: #ccc;
  padding: 0 40rpx;
}
