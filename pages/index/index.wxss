/**index.wxss**/
Page{
  width: 100%;
  height:100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.cutdownTime{
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size:60rpx;
  letter-spacing:1px;
  margin-top: 30%;
}

.cumtime{
  font-size: 45rpx;
  font-family:"din";
  margin-top: 20rpx;
}
.startbtn{
  width: 450rpx;
  margin-top: 20rpx;
  height: 112rpx;
  line-height: 112rpx;
  background-color:#73bfb9;
  border-radius: 10rpx;
  color: #fff;
}
.indexbg{
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  z-index: -20;
}





.mask {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  overflow: hidden;
  background: rgba(000, 000, 000, 0.3);
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modalDlg {
  width: 90%;
  height: 90%;
  z-index: 9999;
  background-color: #fff;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button::after {
  content: "";
  border: none;
}

.btnimg {
  width: 200rpx;
  height: 200rpx;
  z-index: 10000;
  border-radius: 50%;
  margin-top: 156rpx;
}

.btnimg button {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: 160rpx 160rpx;
  background-repeat: no-repeat;
  border: none;
}

.backimg {
  width: 90%;
  height: 90%;
  position: absolute;
}
.miniicon {
  width: 70%;
  height: 200rpx;
  z-index: 10000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  color: yellow;
}

.miniiconitem {
  width: 120rpx;
  height: 120rpx;
  z-index: 10000;
  border-radius: 50%;
}

.miniiconitem image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: 160rpx 160rpx;
  background-repeat: no-repeat;
  border: none;
}

.regbagtext {
  width: 100%;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
  color: yellow;
  margin-top: 50rpx;
}
.regbagtext .descp1 {
  font-size:40rpx;
  text-align: center;
  width: 100%;
}
.regbagtext .descp {
  font-size:40rpx;
  margin-top:50rpx;
  text-align: center;
  width: 100%;
}


.popuptext {
  width: 50%;
  z-index: 10000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  color: yellow;
  margin-top: 150rpx;
}
.popuptext view {
  font-size: 24rpx;
  color: yellow;
  text-align: center;
  height: 30rpx;
}


.closetext {
  border-radius: 50rpx;
  width: 100rpx;
  text-align: center;
  background-color: rgba(000, 000, 000, 0.3);
  font-size: 20rpx;
  color: yellow;
  padding-bottom: 6rpx;
}


/**
*广告位样式
*/
.adv-navigate{
  width: 100%;
}

.adv-navigate-banner{
  position: absolute;
  bottom: 50rpx;
  width: 100%;
}
.more-btn{
  background-color: #000000;
  color: #FFFFFF;
  width: 50%;
  border-radius: 40px;
  margin-bottom: 5px;
  margin-top: 150rpx;
}
.more-btn::after{
  border: none;
}
.banner-view{
  text-align: center;
  width:100%;
}
.tu-block{
  position: absolute;
  left: 0px;
  bottom: 600rpx;
  height: 120rpx;
  line-height: 120rpx;
}
.tu-block-image{
  width: 140rpx;
}
.cs_button {
  background-color: transparent;
  padding: 0px;
}
.cs_button::after{
  border: none;
}


/*弹出层样式*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  overflow: hidden;  
  background-color: rgba(15, 29, 104, 0.6);
}
.drawer_box {  
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content:center;
  overflow: hidden;  
  position: fixed;  
  bottom: 0px; 
  z-index: 1001;  
  text-align: center;
  background-color: rgba(15, 29, 104, 0.6);
} 
.drawer_content_box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.drawer_content{
  height: 100%;
  width: 90%;
  display:flex;
	flex-direction:row;
  justify-content: center;
  flex-wrap: wrap;
}
.drawer_content image{
  width: 100%;
  height: 98%;
  border-radius: 30rpx;
}

.drawer_btn_block{
  width: 100%;
  align-items: center;
  justify-content: center;
  display:flex;
	flex-direction:row;
  margin-bottom: 70rpx;
}
.drawer_btn_block button{
  height: 40px;
  line-height: 40px;
  margin-bottom: 10rpx;
}
.save-img{
  background-color: #e84053;
  color: #FFFFFF;
}
.share-img{
  background-color: #2ba246;
  color: #FFFFFF;
}
.drawer_content_canvas{
  margin-top: 450px;
  width: 977px;
  height: 1800px;
}

.drawer_content_canvas_abs{
  width: 977px;
  height: 1800px;
  position: fixed;
  left: 100000px;
}

.hidden-view{
  display: none;
}
/**
* 客服按钮
**/
.message-tu{
  position: absolute;
  right: 0px;
  bottom: 400rpx;
}
.message-tu-button{
  margin: 0px;
  padding: 0px;
  width: 128rpx;
  height: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: transparent;
}
.message-tu-button::after{
  border: none;
}
.message-tu-image{
  width: 128rpx;
  height: 128rpx;
}

.promotion-view{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 70rpx;
  background-color: #CCCCCC;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
